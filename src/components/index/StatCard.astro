---
import type { StringLiteral } from "@babel/types";

export interface Props {
  title: string;
  data: number;
  desc: string;
}

const { title, data, desc } = Astro.props;
---

<div
  class="p-5 text-gray-700 bg-white border border-gray-100 flex flex-col gap-1"
>
  <h3 class="font-bold">{title}</h3>
  <h2 class="text-gray-900 font-bold text-2xl">{data}</h2>
  <p class="text-sm font-medium">{desc}</p>
</div>
